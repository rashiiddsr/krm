# Contoh resmi env backend. Salin ke .env dan sesuaikan.

# Server
PORT=3001
FRONTEND_ORIGIN=http://localhost:5173
SESSION_COOKIE=krm_session

# Database (MySQL)
DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=krm_mobilindo
